@model CST_350_Milestone.Models.UserModel

<h4>Register New User</h4>
<hr />
<div class="row">
    <div class="form-group col-lg-4">
        <form asp-action="ProcessRegister">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-2">
                <input asp-for="FirstName" class="form-control" id="floatFirstName" placeholder="John"/>
                <label for="floatFirstName">First Name</label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="LastName" class="form-control" id="floatLastName" placeholder="Smith" />
                <label for="floatLastName">Last Name</label>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <select asp-for="Sex" class="form-control" 
                    asp-items="Html.GetEnumSelectList<SexEnum>()">
                        <option value="">Please Select Sex</option>
                    </select>
                <span asp-validation-for="Sex" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <input asp-for="Age" class="form-control" placeholder="Age"/>
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group mb-2">
                <select asp-for="State" class="form-control"
                        asp-items="Html.GetEnumSelectList<StateEnum>()">
                    <option value="">Please Select State</option>
                </select>
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Email" class="form-control" id="floatEmail" placeholder="example@fake.com"/>
                <label for="floatEmail">E-mail</label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-2">
                <input asp-for="Username" class="form-control" id="floatUsername" placeholder="fakeUser01"/>
                <label for="floatUsername">Username</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating mb-4">
                <input asp-for="Password" type = "password" class="form-control" id="floatPass" placeholder="pass1234" />
                <label for="floatPass">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
