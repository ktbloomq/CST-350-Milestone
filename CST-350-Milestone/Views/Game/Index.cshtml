@model CST_350_Milestone.Models.GameBoard

<style>
	.game-button { width: 35px; height: 35px;}
	.game-button-image { width: 45px; }
	.button-zone { display: flex; flex-wrap: wrap; }
	.line-break { flex-basis: 100%; height: 0; }
	.button-label { font-size: 8px; text-align: center; }
</style>

@{
	string[] imageNames = { "unclicked.png", "clicked.png", "flag.png", "bomb.png" };
}

<div class="button-zone">
	@for (int i = 0; i<Model.Size; i++)
	{
		for(int j=0; j<Model.Size; j++)
		{
			<a class="btn btn-outline-dark game-button" href="~/game/play?row=@i&col=@j">
				@if(Model.Grid[i,j].Visted)
				{
					<div>@Model.Grid[i,j].LiveNeighbors</div>
				} else
				{
					<div> </div>
				}
			</a>
		}
		<div class="line-break"></div>
	}
</div>