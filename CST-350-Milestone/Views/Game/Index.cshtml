@model IEnumerable<CST_350_Milestone.Models.GameCell>

<style>
	.game-button { width: 50px; border: 2px black; margin: 3px }
	.game-button-image { width: 45px; }
	.button-zone { display: flex; flex-wrap: wrap; }
	.line-break { flex-basis: 100%; height: 0; }
	.button-label { font-size: 8px; text-align: center; }
</style>

@{
	string[] imageNames = { "unclicked.png", "clicked.png", "flag.png", "bomb.png" };
}

<form>
	<div class="button-zone">
		@for(int i = 0; i < Model.Count(); i++)
		{
			@if(@i % 10 == 0)
			{
				<div class="line-break"></div>
			}
			<button class="game-button" type="submit" value="@Model.ElementAt(i).Row, @Model.ElementAt(i).Column" name="buttonPosition" asp-controller="Game" asp-action="HandleButtonClick">
				<div class="button-label">
					@if(@Model.ElementAt(i).IsVisited)
					{
						@Model.ElementAt(i).LiveNeighbors
					}
				</div>
			</button>
		}
	</div>
</form>