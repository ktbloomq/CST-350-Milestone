@model CST_350_Milestone.Models.GameCellModel

<button class="game-button" type="submit"
		value="@Model.Id"
		id="button"
		name="gridID">


	@if (Model.IsVisited)
	{ // Show visited cells and amount of neighbors
		if (Model.LiveNeighbors != 0 && Model.LiveNeighbors != 9)
		{
			if (Model.LiveNeighbors == 1)
			{
				<span class="neighbor-count one-count"><b>@Model.LiveNeighbors</b></span>
			}
			else if (Model.LiveNeighbors == 2)
			{
				<span class="neighbor-count two-count"><b>@Model.LiveNeighbors</b></span>
			}
			else if (Model.LiveNeighbors == 3)
			{
				<span class="neighbor-count three-count"><b>@Model.LiveNeighbors</b></span>
			}
			else
			{
				<span class="neighbor-count four-or-more"><b>@Model.LiveNeighbors</b></span>
			}
		}
		else if(Model.Live)
		{
			<img class="game-button-image" src="~/img/bomb.png" />
		}
	}
	else if (Model.IsFlagged)
	{
		<img class="game-button-image" src="~/img/flag.png" />

	}
	else
	{
		//If not visited, show unvisited square
		<img class="game-button-image" src="~/img/unclicked.png" />
	}

	@if (Model.Live && Model.IsVisited)
	{ //Show Bombs if Clicked on
		<img class="game-button-image" src="~/img/bomb.png" />
	}
</button>